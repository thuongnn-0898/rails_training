<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.microposts.minisize), micropost.user %>
  <span class="user">
    <%= link_to micropost.user.name, micropost.user %>
    </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
    </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to t("user.delete"), micropost, method: :delete,
        data: { confirm: t("user.delete_msg") } %>
    <% end %>
  </span>
</li>
